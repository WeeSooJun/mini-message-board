extends layout 

block content
  h1= title
  
  form(method='POST' action='/new')
    div.form-group
      label(for='author_name') Author Name: 
      input#author_name.form-control(type='text' name='author_name')
    div.form-group
      label(for='message') Message: 
      input#message.form-control(type='text' name='message')
    button.btn.btn-primary(type='submit') Submit
  